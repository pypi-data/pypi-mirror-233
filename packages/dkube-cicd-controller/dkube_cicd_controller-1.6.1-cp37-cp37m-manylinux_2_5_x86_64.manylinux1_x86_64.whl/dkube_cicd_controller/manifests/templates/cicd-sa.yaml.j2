apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{service_account}}
  namespace: dkube-cicd
  annotations:
    repo: {{git_repo}}
{% if git_secret %}
secrets:
- name: {{git_secret}}
{% endif %}

imagePullSecrets:
- name: dkube-dockerhub-secret
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: {{service_account}}
  namespace: dkube-cicd
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: cicd
subjects:
- kind: ServiceAccount
  name: {{service_account}}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{service_account}}
  namespace: dkube
subjects:
- kind: ServiceAccount
  name: {{service_account}}
  namespace: dkube-cicd
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: tekton-minimal-cluster
