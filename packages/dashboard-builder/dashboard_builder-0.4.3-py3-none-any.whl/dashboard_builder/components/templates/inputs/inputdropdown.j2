<div class="overflow-hidden">
    <label for="{{ name }}" class="text-xs sm:text-sm md:text-base font-medium text-gray-700 mb-2">
        {{ label }}
    </label>
    <div class="relative">
        <select name="{{ name }}" class="w-full bg-white border border-gray-300 rounded-md py-2 px-3 sm:px-4 text-xs sm:text-sm md:text-base focus:outline-none focus:ring focus:ring-opacity-50 focus:ring-blue-500">
            {% for value in values %}
            <option value="{{ value }}" {% if value == selected_value %} selected {% endif %}>
                {{ value }}
            </option>
            {% endfor %}
        </select>
    </div>
</div>
