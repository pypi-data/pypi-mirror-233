include:
  - template: Security/SAST.gitlab-ci.yml

stages:
  - test
  - build

image: registry.gitlab.com/evenergi/secdevops/build-tools/pybuild${python_version}:latest

build:
  stage: build
  script:
    - pipenv check
    - semantic-release publish --post
    - python -m build --sdist --wheel .
    - twine upload --verbose --user nickoszee -p $PYPI_PASSWORD dist/*
  only:
    - main
