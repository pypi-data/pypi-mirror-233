{
  "name": "rsp-jupyter-extensions",
  "version": "0.9.0",
  "description": "Jupyter Extensions for the RSP",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "homepage": "https://github.com/lsst-sqre/rsp-jupyter-extensions",
  "bugs": {
    "url": "https://github.com/lsst-sqre/rsp-jupyter-extensions/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Adam Thornton",
    "email": "athornton@lsst.org"
  },
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,js,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "browser": {
    "URL": "window.URL"
  },
  "types": "lib/index.d.ts",
  "style": "style/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/lsst-sqre/rsp-jupyter-extensions.git"
  },
  "scripts": {
    "build": "jlpm run build:lib && jlpm run build:labextension:dev",
    "build:prod": "jlpm run clean && jlpm run build:lib && jlpm run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "build:lib": "tsc",
    "clean": "jlpm run clean:lib",
    "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
    "clean:labextension": "rimraf rsp_jupyter_extensions/labextension",
    "clean:all": "jlpm run clean:lib && jlpm run clean:labextension",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "install:extension": "jlpm run build",
    "watch": "run-p watch:src watch:labextension",
    "watch:src": "tsc -w",
    "watch:labextension": "jupyter labextension watch ."
  },
  "dependencies": {
    "@jupyterlab/application": "^3",
    "@jupyterlab/apputils": "^3",
    "@jupyterlab/coreutils": "^5",
    "@jupyterlab/docmanager": "^3",
    "@jupyterlab/mainmenu": "^3",
    "@jupyterlab/services": "^6",
    "@jupyterlab/statusbar": "^3",
    "@lumino/algorithm": "^1",
    "@lumino/widgets": "^1",
    "@types/core-js": "^2"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mkdirp": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "rimraf": "^5.0.1",
    "typescript": "~4.1.3"
  },
  "sideEffects": [
    "style/*.css",
    "style/index.js"
  ],
  "styleModule": "style/index.js",
  "jupyterlab": {
    "disabledExtensions": [
      "@jupyterlab/statusbar-extension:mode-switch"
    ],
    "discovery": {
      "server": {
        "managers": [
          "pip"
        ],
        "base": {
          "name": "rsp_jupyter_extensions"
        }
      }
    },
    "extension": true,
    "outputDir": "rsp_jupyter_extensions/labextension"
  },
  "jupyter-releaser": {
    "hooks": {
      "before-build-npm": [
        "python -m pip install 'jupyterlab<4'",
        "jlpm"
      ]
    }
  }
}
