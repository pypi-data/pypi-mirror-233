{%- macro render_search_link(arg) -%}
    {%- value ui=({
        "href": ui_config.url_prefix ~ "?q=&f=" ~ searchFacet ~ ":" ~ arg.value,
        "title": arg.title,
        "label": arg.label
        }),
        component="url",
        className="search link"
    -%}
{%- endmacro -%}

{%- macro render_definition_link(arg) -%}
    <a href="{{arg}}" target="_blank" aria-label="{{_("Open definition")}}" title="{{_("Open definition")}}" >
        <i class="icon book justify"></i>
    </a>
{%- endmacro -%}  

{%- macro render_url(arg) -%}
    <a class="ui {{className}}" href="{{arg.href | e}}" aria-label="{{arg.title}}" title="{{arg.title}}">
        <span class="{{className}} label">
            {{arg.label if arg.label else arg.title}}
        </span>
    </a>
{%- endmacro -%}

{%- macro render_sidebar_links(arg) -%}
<div class="ui link list">
    {% for l in arg.items() %}
        <div class="item">
            <i class="external alternate icon"></i>
            <div class="content">
                <a class="header" href="{{l.1}}" target="_blank">
                    {{_("api." + l.0)}}
                </a>
            </div>
        </div>
    {% endfor %}
    </div>
{% endmacro%}